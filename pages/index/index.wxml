<!--pages/index/index.wxml-->
<view class="result">
  <view class="result-num">{{num}}</view>
  <view class="result-op">{{op}}</view>
</view>
<view class="btns">
  <view>
    <view hover-class="bg" bindtap="tapReset">CLS</view>
    <view hover-class="bg" bindtap="tapDel">DEL</view>
    <view hover-class="bg" bindtap="tapOp" data-val="%">%</view>
    <view hover-class="bg" bindtap="tapOp" data-val="/">/</view>
  </view>
  <view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="7">7</view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="8">8</view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="9">9</view>
    <view hover-class="bg" bindtap="tapOp" data-val="*">*</view>
  </view>
  <view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="4">4</view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="5">5</view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="6">6</view>
    <view hover-class="bg" bindtap="tapOp" data-val="-">-</view>
  </view>
  <view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="1">1</view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="2">2</view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="3">3</view>
    <view hover-class="bg" bindtap="tapOp" data-val="+">+</view>
  </view>
  <view>
    <view hover-class="bg" bindtap="tapNumBtn" data-val="0">0</view>
    <view hover-class="bg" bindtap="tapDotBtn">.</view>
    <view hover-class="bg" bindtap="tapOp" data-val="=">=</view>
  </view>
</view>
