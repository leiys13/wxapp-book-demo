/* pages/person/person.wxss */
.container {
  width: 100%;
  height: 100%;
}
.head {
  width: 100vw;
  height: 40vh;
  background: #325;
  text-align: center;
  line-height: 40vh;
}
.head > image {
  width: 16vh;
  height: 16vh;
  margin-top: 12vh;
  border-radius: 50%;
}
.tab {
  display: flex;
  flex-direction: column;
  height: 60vh;
}
.tab > view {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  margin: 0 20rpx;
}
.tab text {
  flex: 1;
}
.tab view image {
  height: 30rpx;
  width: 30rpx;
}